# -------------------  wm independent hotkeys  -----------------------


# terminal emulator
super + Return
	urxvt

super + alt + Return
	kitty

# program launcher
super + @space
	rofi -no-lazy-grab -show drun -modi drun -theme $HOME/.config/rofi/launchers/gruv/style_9.rasi

# network launcher
super + alt + @space
	~/.config/rofi/applets/applets/network.sh

# volume launcher
super + v
	~/.config/rofi/applets/applets/volume.sh

# date launcher
super + d
	~/.config/rofi/applets/applets/time.sh

# power menu launcher
alt + q
	~/.config/rofi/applets/applets/powermenu.sh

# make sxhkd reload its configuration files
super + Escape
  	pkill -USR1 -x sxhkd; notify-send "Sxhkd" "sxhkdrc config reloaded" -i ~/.icons/gradient/bell.png


# ----------------------  bspwm hotkeys  ------------------------


# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest window
super + g
	bspc node -s biggest.window

# workspaces 1
super + 1
	bspc desktop --focus ^1; notify-send "workspace 1" 

# workspaces 2
super + 2
	bspc desktop --focus ^2; notify-send "workspace 2"

# workspaces 3
super + 3
	bspc desktop --focus ^3; notify-send "workspace 3"

# screenshot
Print
	~/.local/bin/awesome-flameshot

alt + Print
	~/.local/bin/flameshot-imgck

# border script
alt + s
	./borders

# kill border script
ctrl + s 
	killall borders


# ---------------------  state/flags  -------------------------


# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}



# ---------------------  focus/swap  ------------------------


# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local.!hidden.window

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d}



# ------------------   preselect  -------------------


# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel



# -----------------------  move/resize  -----------------------


# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}


# --------------------- audio/brightness -----------------------



# raises volume
#XF86AudioRaiseVolume
#    amixer set Master 5%+

# lowers volume
#XF86AudioLowerVolume
#    amixer set Master 5%-

# raises volume
alt + F12
	pamixer -i 5; notify-send "Volume" "volume increase +5" -i ~/.icons/gradient/sound.png 

# lowers volume
alt + F11
    	pamixer -d 5; notify-send "Volume" "volume decrease -5" -i ~/.icons/gradient/sound.png

# mute/unmute
alt + F10
    	pamixer -m; notify-send "Volume" "muted" -i ~/.icons/gradient/sound.png

alt + F9
    	pamixer -u; notify-send "Volume" "unmuted" -i ~/.icons/gradient/sound.png


